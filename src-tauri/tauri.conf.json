{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Noteban",
  "version": "3.2.2",
  "identifier": "dev.th3a.notes",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Noteban",
        "width": 800,
        "height": 600,
        "minWidth": 400,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUwN0ZGOTg1NjY2QjZBMTgKUldRWWFtdG1oZmwvVUxqVlhmd0Jja2RaRklIWVhoTytwbHRpN0p2YVJIWEdsZW9yZ2N0ZCtxTEgK",
      "endpoints": [
        "https://github.com/noteban/noteban/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  }
}
