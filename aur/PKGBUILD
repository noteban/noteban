# Maintainer: Your Name <your.email@example.com>
pkgname=noteban-bin
pkgver=3.2.4
pkgrel=1
pkgdesc="A notes-first app with kanban organization"
arch=('x86_64')
url="https://github.com/noteban/noteban"
license=('MIT')
depends=('webkit2gtk-4.1' 'gtk3' 'libayatana-appindicator')
provides=('noteban')
conflicts=('noteban')
options=('!strip')
source=("${pkgname}-${pkgver}.AppImage::${url}/releases/download/v${pkgver}/Noteban_${pkgver}_amd64.AppImage")
sha256sums=('SKIP')

prepare() {
    chmod +x "${pkgname}-${pkgver}.AppImage"
    "./${pkgname}-${pkgver}.AppImage" --appimage-extract
}

package() {
    # Install the main binary
    install -Dm755 "${srcdir}/squashfs-root/usr/bin/noteban" \
        "${pkgdir}/usr/bin/noteban"

    # Install desktop file
    install -Dm644 "${srcdir}/squashfs-root/usr/share/applications/Noteban.desktop" \
        "${pkgdir}/usr/share/applications/noteban.desktop"

    # Install icons
    install -Dm644 "${srcdir}/squashfs-root/usr/share/icons/hicolor/32x32/apps/noteban.png" \
        "${pkgdir}/usr/share/icons/hicolor/32x32/apps/noteban.png"
    install -Dm644 "${srcdir}/squashfs-root/usr/share/icons/hicolor/128x128/apps/noteban.png" \
        "${pkgdir}/usr/share/icons/hicolor/128x128/apps/noteban.png"
    install -Dm644 "${srcdir}/squashfs-root/usr/share/icons/hicolor/256x256@2/apps/noteban.png" \
        "${pkgdir}/usr/share/icons/hicolor/256x256/apps/noteban.png"
}
